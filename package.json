{
  "name": "mastoot",
  "version": "0.0.1",
  "main": "out/main/main.js",
  "description": "mastoot",
  "license": "MIT",
  "scripts": {
    "dev": "npm run clean; npm run dev:build-main && npm run dev:watch-renderer",
    "dev:watch-renderer": "webpack --config webpack.config.renderer.js  --mode=development --watch",
    "dev:build-renderer": "webpack --config webpack.config.renderer.js  --mode=development",
    "dev:build-main": "webpack --config webpack.config.main.js  --mode=development",
    "start": "npm run dev:build-main &&npm run dev:build-renderer && npm run electron",
    "electron": "electron .",
    "lint": "eslint --ext .js,.vue src",
    "fmt": "eslint --ext .js,.vue src --fix",
    "test": "jest",
    "clean": "rm -r out/",
    "package:build-renderer": "webpack --config webpack.config.renderer.js  --mode=production",
    "package:build-main": "webpack --config webpack.config.main.js  --mode=production",
    "package": "npm run clean;rm -r dist;npm run package:build-main&&npm run package:build-renderer&&mkdir dist&&node script/packaging.js"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "vue"
    ],
    "transform": {
      ".*\\.(vue)$": "<rootDir>/node_modules/vue-jest",
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest"
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  },
  "dependencies": {
    "@babel/polyfill": "^7.0.0",
    "electron-json-storage": "^4.1.2",
    "log4js": "^3.0.5",
    "mastodon-api": "^1.3.0",
    "uuid": "^3.3.2",
    "vue": "^2.5.17",
    "vue-hot-reload-api": "^2.3.0",
    "vue-ionicons": "^2.2.1",
    "vue-router": "^3.0.1",
    "vuedraggable": "^2.16.0",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.0.1",
    "@babel/preset-env": "^7.0.0",
    "@vue/test-utils": "^1.0.0-beta.25",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^9.0.0",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.2",
    "copy-webpack-plugin": "^4.5.2",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.0",
    "electron": "^2.0.8",
    "electron-packager": "^12.1.1",
    "eslint": "^5.5.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-loader": "^2.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-vue": "^4.7.1",
    "jest": "^23.6.0",
    "node-loader": "^0.6.0",
    "vue-jest": "^2.6.0",
    "vue-loader": "^15.4.2",
    "vue-style-loader": "^4.1.2",
    "vue-template-compiler": "^2.5.17",
    "webpack": "^4.18.1",
    "webpack-cli": "^3.1.0"
  }
}
